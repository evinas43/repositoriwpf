<Window x:Class="PrimeraInterficieWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimeraInterficieWPF"
        mc:Ignorable="d"
        Title="Creació Nom" Height="600" Width="525
        ">
    <StackPanel>
        <Label Content="Nom"/>
        <TextBox Width="520" Height="30" Text="{Binding Path= nom,Mode=TwoWay}"/>
        <Label Content="Cognom"/>
        <TextBox Width="520" Height="30" Text="{Binding Path= cognom,Mode=TwoWay}"/>
        <TextBox Width="520" Height="30" Text="{Binding Path= nom,Mode=TwoWay}"/>
        <Label Content="Nom complet"/>
        <TextBox Width="520" Height="30" Text="{Binding Path= nomComplet,Mode=TwoWay}"/>
    </StackPanel>
</Window>
